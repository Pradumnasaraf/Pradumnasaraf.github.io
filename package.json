{
  "name": "Pradumnasaraf.github.io",
  "version": "4.7.0",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "test": "node --test",
    "format": "prettier --write",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "validate:tags": "node scripts/validate-blog-tags.js",
    "validate:images": "node scripts/validate-blog-images.js",
    "prebuild": "npm run validate:images && npm run validate:tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Pradumnasaraf/Pradumnasaraf.github.io"
  },
  "author": "Pradumna Saraf",
  "license": "GNU General Public License v3.0",
  "homepage": "https://pradumnasaraf.dev",
  "bugs": {
    "url": "https://github.com/Pradumnasaraf/Pradumnasaraf.github.io/issues"
  },
  "keywords": [
    "pradumnasaraf",
    "pradumna saraf",
    "pradumnasaraf.dev"
  ],
  "lint-staged": {
    "*.{css,scss,html}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "react-masonry-css": "^1.0.16",
    "rehype": "^13.0.1",
    "rehype-highlight": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark": "^15.0.1",
    "remark-rehype": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.19"
  },
  "engines": {
    "node": ">=24.0.0 <25"
  }
}
